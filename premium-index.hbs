{{!< default}}

{{#contentFor 'htmlLang'}}{{@site.locale}}{{/contentFor}}

{{#contentFor 'title'}}Exclusive premium content - {{meta_title}}{{/contentFor}}

{{#contentFor 'styles'}}
    <link rel="stylesheet" type="text/css"  href="{{asset "css/premium_content.css"}}" />
{{/contentFor}}

<div class="mds-page">
    <div class="mds-container">
        <header class="mds-header">
            <h1 class="mds-title">Premium blog posts list <a class="icon" href="{{@site.url}}/membership/posts/rss/" title="Follow our Premium posts using a RSS reader">{{> "icons/rss"}}</a></h1>
            <p>
                Premium members of {{@site.title}} get access to a growing list of exclusive blog pasts they can use
                to learn more or get more entertained. Find them all grouped on this page.
            </p>
            <p>
            {{#unless @member.paid}}
                <a class="button highlighted" href="/membership/">Subscribe !</a>
            {{/unless}}
                <a class="button" href="/posts/">See all posts</a>
            </p>
        </header>

        <div class="mds-postfeed">
        {{#foreach posts}}
            {{> "card"}}
        {{else}}
                <p class="no-post">No posts here</p>
        {{/foreach}}
        </div>

        {{pagination}}
    </div>
</div>