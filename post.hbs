{{!< default}}

{{#post}}
<main id="site-main" class="site-main outer">
    <div class="inner">
        <article  class="post-full {{post_class}}">
            <header  class="post-full-header">
                <div class="post-full-header-content">
                    <div class="infos upper">
                        <time class="post-full-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY"}}</time>
                        {{#has tag="sponsored" author="value"}}
                            <div class="sponsored-tag">{{> helpers/trans text="sponsored"}}</div>
                        {{/has}}
                        <p class="post-full-meta-author">
                            {{#has author="count:>1"}}
                                {{> helpers/trans text="This post was a collaboration between"}} {{authors}}
                            {{else}}
                                {{> helpers/trans text="Written by"}} {{authors}}
                            {{/has}}
                        </p>
                    </div>
                    <h1 class="post-full-title">{{title}}</h1>
                    <div class="infos lower">
                        <div class="post-full-meta-tags">
                            <p>
                                {{> helpers/trans text="Published in"}} {{#foreach tags}}{{^has slug="sponsored"}}{{^if @first}},{{/if}} <a href="{{url}}" class="post-tags">{{name}}</a>{{/has}}{{/foreach}}
                            </p>
                        </div>
                        <div class="post-full-meta-share">
                            <p>
                                {{> helpers/trans text="Share this"}}
                            </p>
                            <p>
                                <a class="floating-header-share-tw" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}">
                                    twitter
                                </a>
                                <a class="floating-header-share-fb" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}">
                                    facebook
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </header>
            {{#if access}}
            <section class="post-full-content">
                {{content}}
            </section>

            {{^is "page"}}
                {{#if @labs.members}}
                <form data-members-form="subscribe">
                <section class="subscribe-form">
                    <h3 class="subscribe-form-title">{{> helpers/trans text="Subscribe to"}} {{@site.title}}</h3>
                    <p>{{> helpers/trans text="Get the latest posts delivered right to your inbox"}}</p>
                        <input data-members-email type="email" required="true" placeholder="{{> helpers/trans text="your@email.com"}}" />
                        <button class="button" type="submit">{{> helpers/trans text="Subscribe"}}</button>
                </section>
                <p class="loader">...LOADING...</p>
                <p class="error">{{> helpers/trans text="There was an error sending the email, please try again"}}</p>
                </form>
                {{/if}}

                
                <footer class="post-full-footer">
                    <hr>
                    <p>
                        {{> helpers/trans text="If you have any questions or advices, create a comment below! Also if you like this post, don't forget to share it with your friends. You can also support the blog on <a href='https://www.patreon.com/mindsers' rel='nofollow'>Patreon</a>."}}
                    </p>
                </footer>
            {{/is}}
            {{else}}
                <section class="post-restricted-content">
                    {{excerpt}}...
                </section>
                <section class="subscribe-form">
                    <h3 class="subscribe-form-title">{{> helpers/trans text="This post is for paying subscribers only"}}</h3>
                    <a class="button-subscribe-paid" href="#" data-portal="signup">{{> helpers/trans text="Subscribe"}}</a>
                    <p>{{> helpers/trans text="Already have an account?"}} <a href="#" data-portal="signin">{{> helpers/trans text="Sign in"}}</a></p>
                </section>
            {{/if}}
        </article>
    </div>
</main>

{{^is "page"}}
<aside class="read-next outer">
    <div class="inner">
        <div class="read-next-feed">
            {{#if primary_tag}}
                {{#has tag="#en"}}
                    {{#get "posts" filter="tags:{{primary_tag.slug}}+tag:-hash-fr+id:-{{id}}" limit="3" as |related_posts|}}
                        {{#if related_posts}}
                        {{> related-posts primary_post=../../post primary_tag=../primary_tag posts=related_posts}}
                        {{/if}}
                    {{/get}}
                {{else}}
                    {{#get "posts" filter="tags:{{primary_tag.slug}}+tag:-hash-en+id:-{{id}}" limit="3" as |related_posts|}}
                        {{#if related_posts}}
                        {{> related-posts primary_post=../../post primary_tag=../primary_tag posts=related_posts}}
                        {{/if}}
                    {{/get}}
                {{/has}}
            {{/if}}
            <div class="read-next-time-related">
                {{#next_post}}
                <div>
                    <span class="direction">{{#../../post}}{{> helpers/trans text="Next post"}}{{/../../post}}</span>
                    <h3><a href="{{url}}">{{title}}</a></h3>
                    <p class="tag-list">
                        {{#foreach tags}}
                            {{^has slug="sponsored"}}<a href="{{url}}" class="post-card-tags">#{{name}}</a>{{/has}}
                        {{/foreach}}
                    </p>
                </div>
                {{/next_post}}

                {{#prev_post}}
                <div>
                    <span class="direction">{{#../../post}}{{> helpers/trans text="Previous post"}}{{/../../post}}</span>
                    <h3><a href="{{url}}">{{title}}</a></h3>
                    <p class="tag-list">
                        {{#foreach tags}}
                            {{^has slug="sponsored"}}<a href="{{url}}" class="post-card-tags">#{{name}}</a>{{/has}}
                        {{/foreach}}
                    </p>
                </div>
                {{/prev_post}}
            </div>

        </div>
    </div>
</aside>

<aside class="comments outer">
    <div class="inner">
        <div id='discourse-comments'></div>
    </div>
</aside>
{{/is}}
{{/post}}

{{#contentFor "scripts"}}
    <script src="{{asset "js/prism.js"}}"></script>

    <script>
        // logic for share button
        ((document, window) => {
            document
                .querySelector('.floating-header-share-fb')
                .addEventListener('click', ({ target }) => {
                    window.open(target.href, 'share-facebook', 'width=580,height=296')
                })

            document
                .querySelector('.floating-header-share-tw')
                .addEventListener('click', ({ target }) => {
                    window.open(target.href, 'share-twitter', 'width=550,height=235')
                })
        })(document, window)
    </script>

    <script>
        // logic for title links
        ((document) => {
            const titles = document.querySelectorAll('.post-full-content h1[id], .post-full-content h2[id], .post-full-content h3[id], .post-full-content h4[id], .post-full-content h5[id], .post-full-content h6[id]')

            for (const title of titles) {
                const anchor = document.createElement('a')

                anchor.href = `#${title.id}`
                anchor.innerHTML = '<img class="title-link" src="{{asset "images/link-solid.svg"}}">'

                title.appendChild(anchor)
            }
        })(document)
    </script>

    <script>
        // youtube video & map embeded wrapping
        ((document) => {
            const wrapper = cssClass => videoTag => {
                const parent = videoTag.parentElement
                const container = document.createElement('div')

                videoTag.removeAttribute('height')
                videoTag.removeAttribute('width')

                container.classList.add(cssClass)

                parent.insertBefore(container, videoTag)
                parent.removeChild(videoTag)

                container.appendChild(videoTag)
            }

            document
                .querySelectorAll(`.kg-embed-card iframe, .kg-embed-card object, .kg-embed-card embed`)
                .forEach(wrapper('kg-embeded-card-fluid'))
        })(document)
    </script>

    <script>
        // logic for image gallery
        ((document) => {
            const images = document.querySelectorAll('.kg-gallery-image img')

            for (const image of images) {
                const container = image.closest('.kg-gallery-image')
                const width = image.attributes.width.value
                const height = image.attributes.height.value
                const ratio = width / height

                container.style.flex = ratio + ' 1 0%'
            }
        })(document)
    </script>

    <script>
        // alternative versions
        ((document, window) => {
            const alternativeLinks = document.querySelectorAll('link[rel="alternate"][hreflang]')
            const firsParagraph = document.querySelector('section.post-full-content p:first-child')

            const exist = lang => link => !(new RegExp(`^\/${lang}`)).test(window.location.pathname) && (new RegExp(`^${lang}`)).test(link)
            const insert = box => firsParagraph.parentNode.insertBefore(box, firsParagraph.nextSibling)

            for (const link of alternativeLinks) {
                const info = document.createElement('p')
                info.classList.add('language-info')
                info.classList.add('message-box-info')
                info.classList.add('message-box')

                if (exist('en')(link.hreflang)) {
                    info.innerHTML = `Hey! English speaking friends! <a href="${link.href}">This post also exists in english</a>.`
                    info.lang = 'en'

                    insert(info)
                }

                if (exist('fr')(link.hreflang)) {
                    info.innerHTML = `Oh! Amis francophone! <a href="${link.href}">Cet article existe aussi en français</a>.`
                    info.lang = 'fr'

                    insert(info)
                }
            }
        })(document, window)
    </script>

    {{^is "page"}}
    <script type="text/javascript">
        DiscourseEmbed = { discourseUrl: 'https://community.nathanaelcherrier.com/',
                            discourseEmbedUrl: '{{url absolute="true"}}' };

        (function() {
            if (DiscourseEmbed.discourseEmbedUrl.includes("blog.nathanaelcherrier.com/p/")) return

            var d = document.createElement('script'); d.type = 'text/javascript'; d.async = true;
            d.src = DiscourseEmbed.discourseUrl + 'javascripts/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(d);
        })();
    </script>
    {{/is}}
{{/contentFor}}

